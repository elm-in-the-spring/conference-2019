@import "webcolors/material";
@import "webcolors/mrmrs";

/* @import "webcolors/mrmrs/index.scss"; */

@import url('https://fonts.googleapis.com/css?family=Hind+Madurai:300,400,500,600,700');
/* @import "normalize.css";
@import 'reset-css'; */

:root {
	--color-fuchsia: #A10062;
	--color-orange: #FEB804;
	/* --color-fuchsia: #A33F90; */
}

html {
  box-sizing: border-box;
  font-size: 16px;
}

*, *:before, *:after {
  box-sizing: inherit;
}

body, h1, h2, h3, h4, h5, h6, p, ol, ul {
  margin: 0;
  padding: 0;
}

ol, ul {
  list-style: none;
}

img {
  max-width: 100%;
  height: auto;
}

@font-face {
  font-family: Biko;
  src: url(/fonts/Biko_Regular.otf);
}

@font-face {
  font-family: Biko;
  font-weight: bold;
  src: url(/fonts/Biko_Bold.otf);
}

@font-face {
  font-family: Biko;
  font-weight: 900;
  src: url(/fonts/Biko_Black.otf);
}

/* CLASS UTILS */

@utility textCenter {
	text-align: center;
}

@utility fontBiko {
	font-family: Biko, Hind Madurai, system-ui;
}

@utility fontBold {
	font-weight: bold;
}

@utility upcase {
	text-transform: uppercase;
}

@utility m-1 {
	margin: 1rem;
}

@utility m-2 {
	margin: 2rem;
}

@utility hidden {
	display: none;
}

@utility gapBefore {
	&::before {
		content: " ";
		text-decoration: none;
	}
}

@utility underline {
	text-decoration: underline;
}

@utility noUnderline {
	text-decoration: none;
}

@utility fontNormal {
	font-weight: normal;
}

@utility cursorText {
	cursor: url(/images/cursor-text.png), text;
}

@utility zeroSize {
	height: 0;
	width: 0;
}


/* CONFIG */

@custom-selector :--heading h1, h2, h3, h4, h5, h6;
@custom-selector :--text li, ul, p, input, :--heading;
@custom-selector :--click a, button, input[type="submit"];

@custom-media --short-viewport (max-height: 500px);

$font-base: Biko, Hind Madurai, system-ui;
$font-custom: Biko, Hind Madurai, system-ui;

$clip-1-b: polygon(100% 68%, 100% 100%, 0% 100%);
$clip-1-a: polygon(0 0, 44% 100%, 0% 100%);

$clip-2-b: polygon(80% 0, 100% 40%, 0 84%, 0% 0%);
$clip-2-a: polygon(100% 100%, 0 100%, 0 75%);

 $md: (min-width: 600px);
 $lg: (min-width: 770px);
 $short: (max-height: 500);

/* MIXINS */

