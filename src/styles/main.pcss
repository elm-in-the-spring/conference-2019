/* BASE */


[class^="icon-"], [class*=" icon-"] {
    height: 100px;
    width: 100px;
    display: inline-block;
    fill: currentColor;
}


body {
	overflow: hidden;
	@mixin fill-pattern-green-leaf;
	cursor: url(/images/cursor-auto.png), auto;
	margin: 0;
  font-size: responsive 17px 22px; /* min-size, max-size */
  font-range: 600px 1280px; /* viewport widths between which font-size is fluid */
  line-height: responsive 1.7rem 2.1rem;
  line-height-range: 600px 1280px;
}

body > main {
	height: 100vh;
	overflow: scroll;
	padding: 0 30px;
	margin: 0 -30px;
	font-family: $font-base;
	grid-kiss:
		"+-----------------------------------+      "
		"|         → .Section--hero ←        |     "
		"+-----------------------------------+      "
		"+-----------------------------------+      "
		"|        .Section--details           |   "
		"+-----------------------------------+      "
		"+-----------------------------------+      "
		"|        .Section--speakers          |   "
		"+-----------------------------------+      "
		"+-----------------------------------+      "
		"|        .Section--sponsors          |   "
		"+-----------------------------------+      "
		"+-----------------------------------+      "
		"|                 ↓                 |      "
		"|              footer               | 100px"
		"|                 ↑                 |      "
		"+-----------------------------------+      "
		"|     100% view      							 |			";
}

:--heading {
	margin-bottom: 0.7em;
	margin-top: 0.5em;
}

:--text {
  cursor: url(/images/cursor-text.png), text;
}

:--click {
  cursor: url(/images/cursor-pointer.png), pointer;

  &:active {
  	cursor: url(/images/cursor-pointer-clicked.png), pointer;
  }
}

.preload-cursors {
  clip: rect(0 0 0 0);
  position: absolute;
  overflow: hidden;
  margin: -.1rem;
  padding: 0;
  width: .1rem;
  height: .1rem;
  border: 0;
  u {
  	cursor: url(/images/cursor-pointer-clicked.png), pointer;
  }
}

::selection {
	 background-color: var(--color-navy);
	.Section__content & {
	  background-color: var(--color-teal);
	}
  color: white;
}


input {
  color: var(--color-navy);

  &::placeholder {
  	color: pink;
  }
}

/********************************************
 ********************************************
 *
 * Hero Component
 *
 ********************************************
 ********************************************/



@component Hero {
	@mixin fill-pattern-green-leaf;
	max-height: 50vh @600 70vh;
	@media (--short-viewport) {
		min-height: 100vh;
		max-height: initial;
	}

	color: var(--color-navy);
	line-height: 1;
	width: 100vw;
	grid-kiss:
		"+-------------------------------------------------------------+"
		"|                                                             |"
		"|                         .HeroHeader                        |  80px "
		"|                                                             |"
		"+-------------------------------------------------------------+"
		"+-----------------+ +-----------------------------------------+"
		"|                   | |                                       |"
		"|    .HeroFlower    | |             .HeroTitle               |  3 "
		"|                   | |                                       |"
		"+-------------------+ +---------------------------------------+"
		"+-------------------------------------------------------------+"
		"|                                                             |"
		"|                        .HeroDetails                         | 1 "
		"|                                                              |"
		"+-------------------------------------------------------------+"
		"+-------------------------------------------------------------+"
		"|                                                             |"
		"|                        .HeroBlurb                           | 1 "
		"|                                                             |"
		"+-------------------------------------------------------------+"
		"+--------------------------100 view---------------------------+"
		"|                                                           |"
		"|                        .HeroFooter                          | 1 "
		"|                                                             |"
		"+-------------------------------------------------------------+"
		"|               40% view        |          100 free           |";
		/* "|         30 view           |            70 view              "; */
}


	/********************************************
	 * Hero__flower
	 ********************************************/


@component HeroFlower {
	grid-row: 2 / span 1 !important;
	/* height: 100%; */
 color: black;
	background-color: white;
  mix-blend-mode: screen;
  font-family: elm-in-the-spring;
	background: white;
  width: 100%;

  @media (min-width: 770px)  {
		grid-row: 1 / span 5 !important;
		padding-top: 80px;
	}


	@element Content {
		font-size: responsive 150px 450px @(max-height: 500px) responsive 100px 300px;
		text-align: right;
		line-height: 1;
	}
}

/********************************************
 * Hero__header
 ********************************************/

@component HeroHeader {
	/* height: 100%;*/
	background: white;
	margin: 0;
	z-index: 20;
}

	/********************************************
	 * Hero__event
	 ********************************************/

@component HeroTitle {
	margin: 0;
	background: white;
	width: 100%;

	@media (max-width: 770px) {
/* 		padding: 40px 0;
	  margin-top: -80px;
	  margin-bottom: -80px; */
	}

	@modifier elm {
		font-weight: 700;
		text-transform: uppercase;
		display: inline-block;
	  letter-spacing: -0.2 @770 -0.75rem;
	  font-size: responsive 5rem 15rem @(max-height: 500px) responsive 3.5rem 11rem;
	  height: 2rem;
	}

	@modifier in-the {
		font-size: 4rem;
		display: inline-block;
		font-weight: 300;


		font-size: responsive 1.7rem 3rem @(max-height: 500px) responsive 1rem 2rem;
	}

	@modifier elm-in-the {
		display: block;
	}

	@modifier spring {
		font-weight: 700;
		position: relative;
		letter-spacing: -3px;
		font-size: responsive 4rem 9.8rem @(max-height: 500px) responsive 3rem 7rem;
		display: block;
		text-transform: uppercase;
	}


}

@component HeroDetails {
	background: white;
	z-index: 20;
	width: 100%;
 	text-transform: uppercase;
	padding: 1rem @(max-height: 500px) 0.5rem @600 1.5rem;
	padding-left: 1rem @600 0;

	@media (min-width: 770px)  {
		grid-column: 2 !important;
		grid-row: 3 !important;
		padding-left: 0;
	}

	> div {
		font-size: responsive 1.6rem 2.8rem;
		white-space: pre;
		max-width: 400px @770 calc(650px + 4rem);
		margin: 0 auto @1270 0;
		display: flex;
		justify-content: space-between;
		/* margin: 0 20px; */

		div {
			padding: 0 0.5rem @770 0 0.8rem;
			&:first-child {
				padding-left: 0;
			}
			&:last-child {
				padding-right: 0;
				font-weight: 900;
			}
		}
	}
}

@component HeroBlurb {
	background: white;
	text-align: center;
	z-index: 20;
	width: 100%;
	font-size: responsive 1.7rem 2.5rem;
	padding: 1rem 2rem @600 2rem 2rem 0.5rem @1200 1rem;
}

/********************************************
 * Hero__footer
 ********************************************/

@component HeroFooter {
	background: white;
	text-align: center;
	padding: calc(1.5rem - 12px) 0 calc(1.5rem + 12px);
}


/* SECTIONS */


@component Section {
	> div:first-child {
		max-width: 100vw;
	}

	@element heading {
		text-align: center;
		text-transform: uppercase;
		padding-top: 2rem;
		font-size: 2.5rem @600 3rem;
		font-weight: 900;
	}

	@element subheading {
		font-size: 1.875rem @600 2.25rem;
		margin-bottom: 0.4rem @600 1rem;
		margin-top: 3rem;
		&:first-of-type {
			margin-top: 0;
		}
	}

	@element content {
		font-weight: 300;
		color: var(--color-aqua);
		background: var(--color-navy);
		/* font-size: 1.5rem @600 1.25rem; */
		padding: 3rem 2rem 3rem;
		margin-top: 0.5rem @600 1rem;

		/* TODO: chnage any that are buttons */
		a {
			color: white;

			&:hover {
				color: var(--color-blue);
			}
		}
	}

	@element paragraph {
		margin-bottom: 1.125rem;

		&:last-of-type {
			margin-bottom: 0;
		}
	}

	@element logos {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;
		padding-top: 1rem;

		img {
			height: 3rem @600 5rem;
			object-fit: scale-down;
			@util padding(null 0.5rem null 0.5rem);
			@util margin(null 0.5rem null 0.5rem);
		}
	}


	@element speaker-listing {
		display: block @600 flex;
		margin-bottom: 1rem @600 calc(2rem + 12px);
		padding-top: calc(1rem + 12px) @600 2rem;
		border-top: 6px dotted color(#001f3f lightness(+10%) saturation(+80%));

		&:first-child {
			border-top: none;
		}
	}

	@element speaker-headshot {
		border: 8px solid var(--color-teal);
		height: 8rem @600 12rem;
		width:  8rem @600 12rem;

		@modifier shadow {
			box-shadow: -12px 12px var(--color-orange);
		}

		margin-left: 12px @600 0;
	}

	@element speaker-text {
		margin-top: 1.5rem @600 0;
		margin-left: 0 @600 2rem;
		display: block @600 flex;
		flex-wrap: wrap;
		align-content: center;
	}

	@element speaker-name {
		font-size: 1.875rem @600 2.3rem;
		font-weight: bold;
		color: var(--color-orange);
		@util margin(0 null);
	}

	@element social-links {
		font-size: 1.3rem @600 1.5rem;
		line-height: 1 @600 1.5;
		margin-left: 0 @600 0.5rem;
		margin-top: 0.7rem @600 0;
		text-decoration: none;
		display: flex;
		justify-content: flex-start;
		flex-basis: 100% @600 auto;
	}

	@element social-link {
		margin: 0.5rem;

		&:first-child {
			margin-left: 0;
		}
	}

	@element talk-titles {
		margin-top: 1rem;
		font-weight: normal;
		flex-basis: 100%;
	}

	@element talk-title {
		@util margin(0 null);
		font-size: 1.5rem @600 1.75rem;
	}

	@element talk-subtitle {
		@util margin(0 null);
	}

	/* SPECIFIC SECTIONS */

	@modifier details {
