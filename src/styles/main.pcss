input {
  color: config('colors.blue');
  &::placeholder {
  	color: config('colors.pink-darker');
  }
}


::selection {
	background-color: config('colors.blue');
	.section-content & {
	  background-color: config('colors.teal-light');
	}
  color: white;
}


.my-text-special {
	@apply text-style-special-v3;
}

/* ***************************************** */


@component Section {
	@element heading {
		text-align: center;
		text-transform: uppercase;
		padding-top: 2rem;
		/* font-size: 3.5rem; */
	}

	@element content {
		font-weight: 300;
		color: aqua;
		background: navy;
		font-size: 1.25rem @md 1.5rem;
		padding-top: 1rem;
		margin-top: 1rem;
/*
		@apply leading-normal
					 font-light
					 text-teal-light
					 text-xl
					 md:text-2xl
					 bg-blue-dark
					 p-12
					 mt-10; */
	}

	@element subheading {
		font-size: 1.875rem @md 2.25rem;
		margin-bottom: 0.4rem;
		/* @apply mb-5 text-3xl md:text-4x; */
	}

	@element logos {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: center;
		padding-top: 1rem;

		/* @apply flex flex-wrap items-center justify-center pt-10; */

		img {
			height: 0.5rem;
			object-fit: scale-down;
			@util padding(null 0.5rem null 0.5rem);
			@util margin(null 0.5rem null 0.5rem);
			/* @apply px-2 mx-2 object-scale-down h-2; */
		}
	}

	@modifier sponsors {
		@element heading {
			@insert my-text-special;
		}
	}
}

