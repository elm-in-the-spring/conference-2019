	/* @modifier  */
}

@component ButtonContainer {
	display: flex;
  flex-wrap: wrap;

	@modifier offset {}

	@modifier centered {

	  justify-content: center;
	  align-items: center;
	}
}


@component Button {
	position: relative;
  min-width: 0;
  max-width: 100%;
  text-align: center;
  display: block;
  flex: 0 0 auto;
  touch-action: manipulation;
  display: inline-block;
  color: var(--color-yellow);
  background-color: var(--color-blue);

  &::before {
  	transform: translate3d(.8rem,.8rem,0);
	  position: absolute;
	  top: 0;
	  right: 0;
	  bottom: 0;
	  left: 0;
	  margin: auto;
	  content: "";
	  display: block;
	  transition-property: opacity,transform,-webkit-transform;
	  transition-duration: .24s;
	  transition-timing-function: cubic-bezier(.64,0,.35,1);
	  background-color: #0032c2;


  }

  &:hover {
  	&::before {
	  	transform: translateZ(0);
  	}
	 }

	 &:active {

	 }

	 &:focus {

	 }


  @element interior {
  	min-width: 0;
	  max-width: 100%;
	  position: relative;
	  z-index: 2;
	  display: inline-flex;
	  flex: 0 0 auto;
	  justify-content: center;
	  align-items: center;
	  padding: .8rem 2.4rem;
	  border: .3rem solid currentColor;
	  font-size: 1.4rem;
	  font-weight: 700;
	  transition-property: color,background-color,border-color;
	  transition-duration: .24s;
	  transition-timing-function: cubic-bezier(.64,0,.35,1);
  }

  @element text {
  	/* background-color: var(--color-blue); */
  	min-width: 0;
	  max-width: 100%;
	  display: block;
	  flex: 0 1 auto;
	  transition: transform .24s cubic-bezier(.64,0,.35,1),-webkit-transform .24s cubic-bezier(.64,0,.35,1);
	  white-space: nowrap;
  }
}


